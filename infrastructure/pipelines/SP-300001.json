{
    "Comment": "SP-300001 - ETL to maintain loan_fact",
    "StartAt": "SP-300001",
    "States": {
        "SP-300001": {
            "Type": "Task",
            "Resource": "arn:aws:states:::ecs:runTask.waitForTaskToken",
            "Parameters": {
                "LaunchType": "FARGATE",
                "Cluster": "${ecsClusterARN}",
                "TaskDefinition": "${mdi_2_arn}",
                "NetworkConfiguration": {
                    "AwsvpcConfiguration": {
                        "AssignPublicIp": "DISABLED",
                        "SecurityGroups": [
                            "${securityGroupId}"
                        ],
                        "Subnets": ${subnetIDs}
                    }
                },
                "Overrides": {
                    "ContainerOverrides": [
                        {
                            "Environment": [
                                {
                                    "Name": "PROCESS_NAME",
                                    "Value": "SP-300001"
                                },
                                {
                                    "Name": "INPUT_DATA",
                                    "Value.$": "States.Format('\\{\"token_id\":\"{}\",\"mdi_input_json\":{}\\}', $$.Task.Token, States.JsonToString($))"
                                }
                            ],
                            "Name": "${mdi_2_container}"
                        }
                    ]
                }
            },
            "Next": "Load_type_choice"
        },
        "Load_type_choice": {
            "Type": "Choice",
            "Choices": [
                {
                    "Variable": "$.load_type",
                    "StringEquals": "NONE",
                    "Next": "Success"
                }
            ],
            "Default": "SP-200001_message"
        },
        "Success": {
            "Type": "Succeed"
        },
        "SP-200001_message": {
            "Type": "Task",
            "Resource": "arn:aws:states:::sqs:sendMessage",
            "Parameters": {
                "QueueUrl": "${fullCheckQueueUrl}",
                "MessageGroupId": "loan_lender_user_access",
                "MessageDeduplicationId.$": "$$.Task.Token",
                "MessageAttributes": {
                    "ProcessId": {
                        "DataType": "String",
                        "StringValue": "SP-200001"
                    }
                },
                "MessageBody.$": "States.JsonToString($)"
            },
            "End": true
        }
    }
}

